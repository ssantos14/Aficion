<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:orientation="horizontal"
    android:background="@color/colorPrimary"
    android:elevation="4dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp">
    <ImageButton
        android:id="@+id/navigation_news"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:contentDescription="@string/news_content_description" />
    <ImageButton
        android:id="@+id/navigation_scores"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:contentDescription="@string/scores_content_description" />
    <ImageButton
        android:id="@+id/navigation_highlights"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:contentDescription="@string/highlights_content_description" />
    <ImageButton
        android:id="@+id/navigation_following"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:contentDescription="@string/following_content_description" />

</LinearLayout>